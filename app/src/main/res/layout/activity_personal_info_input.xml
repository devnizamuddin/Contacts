<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfoInputActivity"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@color/clouds"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/personImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image_icon"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="100dp"
            >

            <ImageView
                android:id="@+id/nameImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/call_icon"
                android:layout_marginTop="8dp"
                />
            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/nameImg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Name"
                />
            <ImageView
                android:id="@+id/phoneImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/nameEt"
                android:src="@drawable/man_icon"
                android:layout_marginTop="5dp"
            />
            <EditText
                android:id="@+id/numberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEt"
                android:layout_toRightOf="@+id/phoneImg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Phone"
                android:inputType="number"
                />
            <ImageView
                android:id="@+id/emailImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/numberEt"
                android:src="@drawable/email_icon"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberEt"
                android:layout_toRightOf="@+id/phoneImg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Email"
                />
            <ImageView
                android:id="@+id/addressImage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/emailEt"
                android:src="@drawable/address_icon"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/addressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEt"
                android:layout_toRightOf="@+id/addressImage"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Address"
                />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>